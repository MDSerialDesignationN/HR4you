{
  "ConnectionStrings": {
    "Db": "server=localhost;port=3306;database=hr4you;user=root;password=root"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "url":"http://localhost:5001",

  "Jwt": {
    "Key": "46be0927a4f86577f17ce6d10bc6aa61",
    "Issuer": "Hr4You",
    "ValidInMin": 15
  },

  "NLog": {
    "internalLogLevel": "Debug",
    "internalLogToConsole": false,
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "mainLogFile": {
        "type": "File",
        "fileName": "${basedir}/log/main/mainLog.log",
        "maxArchiveFiles": "5",
        "archiveAboveSize": "50000000",
        "archiveNumbering": "Rolling"
      },
      "logConsole": {
        "type": "ColoredConsole"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.EntityFrameworkCore.*",
        "minLevel": "Warn",
        "writeTo": "mainLogFile",
        "final": true
      },
      {
        "logger": "Microsoft.EntityFrameworkCore.*",
        "maxLevel": "Warn",
        "final": true
      },
      {
        "logger": "Microsoft.EntityFrameworkCore.*",
        "minLevel": "Info",
        "writeTo": "logConsole",
        "final": true
      },
      {
        "logger": "Microsoft.EntityFrameworkCore.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "Microsoft.*",
        "minLevel": "Info",
        "writeTo": "logConsole,mainLogFile",
        "final": true
      },
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logConsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "mainLogFile"
      }
    ]
  }
}
