@page "/"
@using HR4You.Model.Base
@using HR4You.Model.Base.Pagination
@attribute [StreamRendering]
@inject HttpClient HttpClient
@rendermode InteractiveServer

<PageTitle>Overview</PageTitle>
<div class="page-content min-h-[100vh] p-3 flex flex-col gap-2 select-none">

    <h1 class="text-[2rem] font-bold flex flex-row gap-3 items-center"><i class="fa-solid fa-house"></i>Overview</h1>
    @if (entries == null)
    {
        <p>
            <em>Loading...</em>
        </p>
    }
    else
    {
        <SearchComponent Options1="options1"/>
        <HomeTable entries="entries.Data">
        </HomeTable>
        <KeysetPagination entries="entries" OnPageChanged="EventCallback.Factory.Create<PagedResponseKeySet<HourEntry>>(this, UpdateEntries)" ApiEndpoint="http://localhost:5001/api/master-data/hour-entry/get-user-all-paged?userId=003c1ae2-acfc-495b-b91a-8cedf507568a" />
    }
</div>



@code {
    public PagedResponseKeySet<HourEntry> entries;
    public FilterOption[] options1 = new FilterOption[] { 
        new FilterOption{ Icon = "<i class='fa-regular fa-calendar'></i>", Name = "Date", InputType = "date" },
        new FilterOption{ Icon = "<i class='fa-solid fa-clock'></i>", Name = "StartTime", InputType = "time" },
        new FilterOption{ Icon = "<i class='fa-solid fa-clock'></i>", Name = "EndTime", InputType = "time" },
    };


    protected override async Task OnInitializedAsync()
    {
        try
        {
            entries = await HttpClient.GetFromJsonAsync<PagedResponseKeySet<HourEntry>>("http://localhost:5001/api/master-data/hour-entry/get-user-all-paged?userId=003c1ae2-acfc-495b-b91a-8cedf507568a&reference=0");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching entries: {ex.Message}");
        }

    }

    private void UpdateEntries(PagedResponseKeySet<HourEntry> newEntries)
    {
        this.entries = newEntries;
    }
}

