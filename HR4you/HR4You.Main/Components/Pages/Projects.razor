@page "/Projects"
@attribute [StreamRendering]
@inject HttpClient HttpClient

<PageTitle>Projects</PageTitle>

<h1>Projects</h1>

@if (entries == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <ProjectsTable entries="entries">
    </ProjectsTable>
}



@code {

    public List<Project> entries;


    protected override async Task OnInitializedAsync()
    {
        try
        {
            entries = await HttpClient.GetFromJsonAsync<List<Project>>("http://localhost:5001/api/master-data/project/get-all");
            Console.WriteLine(entries);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching entries: {ex.Message}");
        }

    }
}

